<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/profileandAppointmentCardId"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            app:cardCornerRadius="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@drawable/profile_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#3353AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Your Profile and Appointment"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="10dp"/>



            </LinearLayout>




        </androidx.cardview.widget.CardView>



       <LinearLayout
           android:weightSum="2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="5dp"
           >

           <androidx.cardview.widget.CardView
               android:id="@+id/appointmentCardId"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:clickable="true"
               android:layout_marginRight="5dp"
               android:elevation="10dp"
               app:cardCornerRadius="10dp"
               android:foreground="?android:attr/selectableItemBackground"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   >

                   <ImageView
                       android:layout_marginTop="10dp"
                       android:layout_width="84dp"
                       android:layout_height="84dp"
                       android:padding="10dp"
                       android:src="@drawable/appointmet" />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_margin="10dp"
                       android:background="#3353AA" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="5dp"
                       android:text="Appointment"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                       android:padding="20dp"/>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/bloodCardId"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:clickable="true"
               android:layout_marginLeft="5dp"
               android:elevation="10dp"
               app:cardCornerRadius="10dp"
               android:foreground="?android:attr/selectableItemBackground"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   >

                   <ImageView
                       android:layout_marginTop="10dp"
                       android:layout_width="84dp"
                       android:layout_height="84dp"
                       android:padding="10dp"
                       android:src="@drawable/blood" />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_margin="10dp"
                       android:background="#3353AA" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="5dp"
                       android:text="Blood"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                       android:padding="20dp"/>



               </LinearLayout>



           </androidx.cardview.widget.CardView>



       </LinearLayout>


        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/ambulanceCardId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginRight="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:padding="10dp"
                        android:src="@drawable/ambulance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="#3353AA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Ambulance"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:padding="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tipsId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:padding="10dp"
                        android:src="@drawable/health_tips_icon" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="#3353AA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Health Tips"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:padding="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>






        </LinearLayout>





       <LinearLayout
           android:weightSum="2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="5dp"
           >


           <androidx.cardview.widget.CardView
               android:id="@+id/askQuestionId"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:clickable="true"
               android:layout_marginRight="5dp"
               android:elevation="10dp"
               app:cardCornerRadius="10dp"
               android:foreground="?android:attr/selectableItemBackground"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   >

                   <ImageView
                       android:layout_marginTop="10dp"
                       android:layout_width="84dp"
                       android:layout_height="84dp"
                       android:padding="10dp"
                       android:src="@drawable/question_answer_icon" />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_margin="10dp"
                       android:background="#3353AA" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="5dp"
                       android:text="Ask Question"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                       android:padding="20dp"/>



               </LinearLayout>











           </androidx.cardview.widget.CardView>



           <androidx.cardview.widget.CardView
               android:id="@+id/aboutAppId"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:clickable="true"
               android:layout_marginLeft="5dp"
               android:elevation="10dp"
               app:cardCornerRadius="10dp"
               android:foreground="?android:attr/selectableItemBackground"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   >

                   <ImageView
                       android:layout_width="84dp"
                       android:layout_height="79dp"
                       android:layout_marginTop="10dp"
                       android:padding="10dp"
                       android:src="@drawable/clock_icon" />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_margin="10dp"
                       android:background="#3353AA" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="5dp"
                       android:text="About"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                       android:padding="20dp"/>



               </LinearLayout>











           </androidx.cardview.widget.CardView>



       </LinearLayout>




        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/telemedicineCardId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginRight="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:padding="10dp"
                        android:src="@drawable/phone_icon" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="#3353AA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Telemedicine"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:padding="20dp"/>



                </LinearLayout>











            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/logoutId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:padding="10dp"
                        android:src="@drawable/logout_icon" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="#3353AA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Logout"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:padding="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>







   </LinearLayout>







</ScrollView>