<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/background_color"
    tools:context=".SelectAdminActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="10dp"
       android:orientation="vertical">


       <androidx.cardview.widget.CardView
           android:id="@+id/selectHospitalAdminCard"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:clickable="true"
           android:layout_margin="10dp"
           android:foreground="?android:attr/selectableItemBackground"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:gravity="center"
               >

               <ImageView
                   android:layout_width="84dp"
                   android:layout_height="84dp"
                   android:src="@drawable/hospital_icon" />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_margin="10dp"
                   android:background="@color/teal_200" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   android:text="Hospital"
                   android:textStyle="bold"
                   android:textSize="15sp"
                   android:textColor="@color/black" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/selectDoctorAdminCard"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:clickable="true"
           android:layout_margin="10dp"
           android:foreground="?android:attr/selectableItemBackground"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:gravity="center"
               >

               <ImageView
                   android:layout_width="84dp"
                   android:layout_height="84dp"
                   android:src="@drawable/person_icon" />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_margin="10dp"
                   android:background="@color/teal_200" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   android:text="Doctor"
                   android:textStyle="bold"
                   android:textSize="15sp"
                   android:textColor="@color/black" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/selectAmbulanceAdminCardId"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:clickable="true"
           android:layout_margin="10dp"
           android:foreground="?android:attr/selectableItemBackground"
           >

           <LinearLayout
               android:weightSum="4"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:gravity="center"
               >

               <ImageView
                   android:layout_weight="2"
                   android:layout_width="84dp"
                   android:layout_height="0dp"
                   android:src="@drawable/ambulance" />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_margin="2dp"
                   android:background="@color/teal_200" />

               <TextView
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_margin="5dp"
                   android:text="Ambulance"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textSize="15sp"
                   android:textColor="@color/black" />


               <LinearLayout
                   android:layout_weight="1"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="0dp">

                   <TextView
                       android:id="@+id/hospitalAmbulanceAdmin"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:padding="5dp"
                       android:layout_margin="1dp"
                       android:text="Hospital"
                       android:background="#C80A0A"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:visibility="invisible"/>


                   <TextView
                       android:id="@+id/personalAmbulanceAdmin"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:padding="5dp"
                       android:layout_margin="1dp"
                       android:text="Personal"
                       android:background="#0C229E"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:visibility="invisible"/>


               </LinearLayout>

           </LinearLayout>


           <LinearLayout
               android:weightSum="2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"></TextView>


           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/selectAdminCard"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:clickable="true"
           android:layout_margin="10dp"
           android:foreground="?android:attr/selectableItemBackground"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:gravity="center"
               >

               <ImageView
                   android:layout_width="84dp"
                   android:layout_height="84dp"
                   android:src="@drawable/admin_icon" />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_margin="10dp"
                   android:background="@color/teal_200" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   android:text="Admin"
                   android:textStyle="bold"
                   android:textSize="15sp"
                   android:textColor="@color/black" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>


   </LinearLayout>

</LinearLayout>