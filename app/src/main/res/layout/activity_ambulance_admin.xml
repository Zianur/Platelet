<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".AmbulanceAdminActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        >






        <androidx.cardview.widget.CardView
            android:id="@+id/ambulanceProfileCardId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@drawable/person_icon"
                    android:background="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="2dp">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name : "
                            android:textSize="9sp"
                            android:textColor="#11C85C"
                            android:layout_gravity="center"
                            android:gravity="center"

                            />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/nameAAId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zianur Rahman Joy"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="11sp"

                            />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="2dp">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location : "
                            android:textSize="9sp"
                            android:textColor="#11C85C"
                            android:layout_gravity="center"
                            android:gravity="center"

                            />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/locationAAId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jhalokathi"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold"

                            />



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="2dp">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone : "
                            android:textSize="9sp"
                            android:textColor="#11C85C"
                            android:layout_gravity="center"
                            android:gravity="center"
                            />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/phoneAAId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="01673461416"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold"

                            />



                    </LinearLayout>




                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/black"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        android:id="@+id/edit_delete_button_prodfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Edit / Update"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FF0202"
                        android:padding="5dp"/>



                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/userStats"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@drawable/statistics_payment_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/teal_200" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Statistics"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black" />



            </LinearLayout>











        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="If you are in a different district do not forget change your location. It us needed for you and everyone's betterment "
                    android:textSize="9sp"
                    android:textColor="@color/black" />



            </LinearLayout>











        </androidx.cardview.widget.CardView>


    </LinearLayout>




</ScrollView>