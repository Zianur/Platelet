<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    tools:context=".ProfileBloodActivity">


    <LinearLayout
        android:id="@+id/LLNG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lastDonationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Donation"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_style"/>

            <TextView
                android:id="@+id/remainingDaysId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remaining Days"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="2dp"
                android:background="@drawable/edit_text_style"/>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCardId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/bloodgroup_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="O+"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="#F80404"
                    android:padding="10dp"
                    />

                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="vertical">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:padding="2dp">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Name : "
                                android:textSize="13sp"
                                android:textColor="#11C85C"/>

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/name_profile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Zianur Rahman Joy"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="13sp"

                                />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:padding="2dp">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Location : "
                                android:textSize="13sp"
                                android:textColor="#11C85C"
                                />

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/location_profile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jhalokathi"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold"

                                />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:padding="2dp">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status : "
                                android:textSize="13sp"
                                android:textColor="#11C85C"/>

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/status_profile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ready to Donate"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold"

                                />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:padding="2dp">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phone : "
                                android:textSize="13sp"
                                android:textColor="#11C85C"/>

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/phone_profile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="01673461416"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold"

                                />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:padding="2dp">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Number of donation : "
                                android:textSize="13sp"
                                android:textColor="#11C85C"/>

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/donation_number_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="5"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold"

                                />

                        </LinearLayout>



                    </LinearLayout>





                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/black"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/edit_delete_button_prodfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Edit / Update"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FF0202"
                        android:padding="5dp"/>



                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/appointmentButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointments"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_style"/>


    </LinearLayout>






    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userAppointmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:divider="@color/white"
        android:listSelector="#D0C4D3">
    </androidx.recyclerview.widget.RecyclerView>










</LinearLayout>