<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:padding="8dp"
    android:background="@drawable/edit_text_style">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameUALId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kurmitola General Hospital (shewra)"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/white"

            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Doctor name : "
                android:textSize="13sp"
                android:textColor="@color/white"

                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/doctorNameUALId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MD Zianur Rahman Joy Hawlader"
                android:textColor="@color/white"
                android:textSize="14sp"

                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department : "
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/deptUALId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicine"
                android:textColor="@color/white"
                android:textSize="14sp"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:weightSum="2"
            >


            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:textColor="@color/white"
                android:textSize="13sp"


                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/paymentUALId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="800"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/edit_text_style"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                />


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/dateUALId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23/6/21"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />




        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/getAppoinmentId"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Cancel Appointment"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_style"
                android:textSize="15sp"
                android:textStyle="bold"
                />




        </LinearLayout>



    </LinearLayout>

</LinearLayout>