<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Appointment"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textAllCaps="true"
            android:layout_margin="2dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:weightSum="2">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor Name : "
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/nameACId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zianur Rahman Joy"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:weightSum="2"
            android:padding="2dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Department : "
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_weight="1"
                android:id="@+id/departmentACId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Medicine"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="2dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment "
                android:textSize="13sp"
                android:textColor="@color/white"
                />


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/paymentACId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="700"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/edit_text_style"
                    />


            </LinearLayout>





        </LinearLayout>

        <TextView
            android:id="@+id/dateACId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select date"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:padding="8dp"
            android:background="@drawable/button_style"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">


            <TextView
                android:id="@+id/cancelProfileButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:background="#B80707"/>

            <TextView
                android:id="@+id/updateProfileButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:background="#149549"/>



        </LinearLayout>






    </LinearLayout>



</LinearLayout>